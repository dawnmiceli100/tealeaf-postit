<% show_post_link ||= false %>

<div class="row">
  <div class="span0 well text-center">
    <p>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
          <i class="icon-arrow-up"></i>
        <% end %>
      <% end %>  
    </p>  
    <p><%= comment.total_votes %> votes</p>
    <p>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
          <i class="icon-arrow-down"></i>
        <% end %>
      <% end %>  
    </p>  
  </div>    

  <div class="span8 well">
    <p>
      <em>"<%= comment.body %>"</em>
      <% if show_post_link %>
         on <%= link_to comment.post.title, post_path(comment.post) %>
      <% end %>     
    </p>
    <p>
      <span class="quiet">Posted by </span>
      <%= link_to comment.user.username, user_path(comment.user) %>
      <small> on <%= friendly_datetime(comment.created_at) %></small>
    </p> 
  </div>   
</div>  