<%= render "shared/content_title", title: "Profile: #{@user.username}" %>

<div class="well">
  <dl class="dl-horizontal">
    <dt>Username:</dt>
    <dd><%= @user.username %></dd>
    <dt>Time Zone:</dt>
    <dd><%= @user.time_zone %></dd>
  </dl>  
</div>

<p><strong><%= @user.username %>'s Activity</strong></p>


<ul class="nav nav-tabs">
  <li class="<%= 'active' if params[:tab].nil? %>">
    <%= link_to "Posts (#{@user.posts.count})", user_path(@user) %>
  </li>
  <li class="<%= 'active' if params[:tab] == 'comments' %>">
    <%= link_to "Comments (#{@user.comments.count})", user_path(@user, tab: 'comments') %>  
  </li>
</ul>  
<% if params[:tab].nil? %>
  <% @user.posts.each do |post| %>
    <%= render "posts/post", post: post %>
  <% end %>
<% else %>
  <% @user.comments.each do |comment| %>
    <%= render "comments/comment", comment: comment, show_post_link: true%>
  <% end %>
<% end %>  
     


